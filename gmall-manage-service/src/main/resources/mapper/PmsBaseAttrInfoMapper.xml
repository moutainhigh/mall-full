<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.com.edward.gmall.manage.mapper.PmsBaseAttrInfoMapper">
    <select id="selectAttrValueListByValueId" parameterType="String" resultMap="selectAttrValueListByValueIdMap">
        SELECT ba.*,bv.*,ba.id AS ba_id,bv.id AS bv_id
        FROM pms_base_attr_info ba,
             pms_base_attr_value bv
        WHERE ba.id = bv.attr_id
          AND bv.id IN (${valueIdStr})
    </select>
    <resultMap id="selectAttrValueListByValueIdMap" type="com.com.edward.gmall.bean.PmsBaseAttrInfo" autoMapping="true">
        <result column="ba_id" property="id"></result>
        <collection property="attrValueList" ofType="com.com.edward.gmall.bean.PmsBaseAttrValue"
                    autoMapping="true">
            <result column="bv_id" property="id"></result>
        </collection>
    </resultMap>
</mapper>